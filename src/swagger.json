    "/api/auth/authRemoveUser/{id}": {
      "delete": {
        "tags": [
          "Auth"
        ],
        "summary": "ลบข้อมูล User",
        "description": "ลบข้อมูล User และมีการตรวจสอบ Token เพื่อยืนยันตัวตน โดย Token ส่งผ่าน Header ว่าต้องเป็น ADMIN เท่านั้นก่อนที่จะมีการลบข้อมูล",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
            },
            "description": "Token จากการล็อกอิน ส่งในรูปแบบ Bearer Token"
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            },
            "description": "ID ของ User ที่ต้องการลบข้อมูล"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "P@ssw0rd!",
                    "description": "รหัสผ่านต้องมีตัวพิมพ์ใหญ่ พิมพ์เล็ก ตัวเลข และอักขระพิเศษ"
                  }
                },
                "required": [
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ความสำเร็จทั่วไป",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "object",
                      "example": "ลบข้อมูลเสร็จสิ้น!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "ข้อมูลจาก Client ไม่ถูกต้อง",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "คุณไม่มีสิทธิ์ในการลบข้อมูล! || ลบข้อมูลไม่สำเร็จ!"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "ข้อผิดพลาดเซิร์ฟเวอร์",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal server errors"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
